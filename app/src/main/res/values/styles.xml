<resources>
    <!-- THEME CONTROLS-->
    <!-- Base application theme. -->
    <style name="AppThemeDefault" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/vectorColor</item>
        <item name="android:textColorPrimary">@color/backgroundColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="AppThemeDefaultNoBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="spinnerTheme" parent="Platform.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- THEME CONTROLS-->

    <!-- VALUES CONTROLS-->
    <style name="basic_Values">
        <item name="android:lines">1</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <!--  values for  "converter activity" fields  -->
   <style name="converter_basic_values" parent="basic_Values">
       <item name="android:gravity">center_vertical|end</item>
       <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
     <item name="android:textSize">18sp</item>
     <item name="android:background">@drawable/rect_white</item>
 </style>

  <style name="converterValuesStyle_sw300_360" parent="converter_basic_values">
      <item name="android:layout_marginStart">8dp</item>
      <item name="android:layout_marginTop">8dp</item>
      <item name="android:layout_marginEnd">16dp</item>
      <item name="android:paddingStart">8dp</item>
      <item name="android:paddingLeft">8dp</item>
      <item name="android:paddingTop">2dp</item>
      <item name="android:paddingEnd">8dp</item>
      <item name="android:paddingRight">8dp</item>
      <item name="android:paddingBottom">2dp</item>
  </style>

    <style name="value_Result_Basic" parent="basic_Values">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:backgroundTint">@color/colorBorders</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="calcValueResult_sw300" parent="value_Result_Basic">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="currency_style_sw300" parent="value_Result_Basic">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="value_style_sw330" parent="value_Result_Basic">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="result_style_sw330" parent="value_Result_Basic">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="converterValuesStyle_sw300_360_input" parent="converterValuesStyle_sw300_360">
        <item name="android:inputType">number|numberDecimal</item>
    </style>


  <!--  /END values for  "converter activity" fields  -->


    <style name="converterAuxTextStyleBasicValues" parent="basic_Values">
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="converterAuxTextStyleValues_Head" parent="converterAuxTextStyleBasicValues">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">start</item>>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="converterAuxTextStyleValues_Head_480dp" parent="converterAuxTextStyleValues_Head">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="converterAuxTextStyleValues_SubText" parent="converterAuxTextStyleBasicValues">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:gravity">center_horizontal|end</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="converterAuxTextStyleValues_Head_2" parent="converterAuxTextStyleBasicValues">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:gravity">start|center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="converterAuxTextStyleValues_Head_2_sw480" parent="converterAuxTextStyleValues_Head_2">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="calculatorValuesStyle" parent="basic_Values">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/rect_white</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_basic" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@drawable/ripple</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="elevation">1dp</item>
    </style>


    <style name="buttonSW300" parent="button_basic" >
       <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="tablePoint" parent="buttonSW300" >
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="buttonSW330" parent="button_basic" >
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="newSW300" parent="button_basic" >
        <item name="android:layout_width">60dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="newSW330" parent="button_basic" >
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="supportSW300" parent="newSW300">
        <item name="android:textColor">@color/supportColor</item>
    </style>

    <style name="supportSW330" parent="newSW330">
        <item name="android:textColor">@color/supportColor</item>
    </style>

    <style name="equal_button" parent="button_basic">
        <item name="android:background">@drawable/ripple_equal</item>
    </style>

    <!-- VALUES CONTROLS-->


</resources>
